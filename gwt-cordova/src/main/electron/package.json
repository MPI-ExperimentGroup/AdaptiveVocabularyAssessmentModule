{
  "name": "@experiment.configuration.name@-@project.artifactId@",
  "productName": "@experiment.configuration.displayName@",
  "version": "@application.majorVersion@.@application.minorVersion@.@application.buildVersion@",
  "description": "@experiment.configuration.name@",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "keywords": [],
  "author": "Peter Withers <peter.withers@mpi.nl>",
  "license": "GNU General Public License",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "zip"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "zip"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "@experiment.configuration.name@"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "windowsStoreConfig": {
        "packageName": "@experiment.configuration.name@",
        "name": "@experiment.configuration.name@"
      }
    }
  },
  "build": {
    "asar": true
  },
  "dependencies": {
    "express": "^4.16.3",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "electron-webpack": "^2.8.2",
    "webpack": "~4.42.1"
  }
}