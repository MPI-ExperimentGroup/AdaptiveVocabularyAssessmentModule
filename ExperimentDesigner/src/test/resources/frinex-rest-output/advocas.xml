<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<experiment appNameDisplay="Adaptive Vocabulary Assessment" appNameInternal="advocas" backgroundColour="#FFFFFF" complementColour0="#EAC3A3" complementColour1="#9D7B5E" complementColour2="#C69E7C" complementColour3="#FFEDDE" complementColour4="#FFFDFB" defaultScale="1.0" isScalable="true" primaryColour0="#628D8D" primaryColour1="#385E5E" primaryColour2="#4A7777" primaryColour3="#96ADAD" primaryColour4="#D5D8D8" showMenuBar="false" textFontSize="17">
    <metadata>
        <field controlledMessage="Input at least 3 letters." controlledRegex=".'{'3,'}'" postName="workerId" preventServerDuplicates="false" registrationField="identification code"/>
        <field controlledMessage="." controlledRegex=".*" postName="stimuli" preventServerDuplicates="false" registrationField="stimuli"/>
        <field controlledMessage="Input at least 3 letters." controlledRegex="['\\'S'\\'s]'{'3,'}'" postName="feedBack" preventServerDuplicates="false" registrationField=""/>
    </metadata>
    <presenter displayOrder="1" menuLabel="Edit User" next="Accord" type="metadata" self="Edit_User" title="Edit User">
        <htmlText featureText="Input your identification code here:"/>
        <metadataField fieldName="workerId"/>
        <saveMetadataButton featureText="Next" sendData="true" networkErrorMessage="Cannot connect to the server, please check your internet connection.">
            <onError/>
            <onSuccess>
                <autoNextPresenter/>
            </onSuccess>
        </saveMetadataButton>
    </presenter>
    <presenter displayOrder="2" menuLabel="Accord" next="stimuliScreen" type="metadata" self="Accord" title="Accord">
        <htmlText featureText="Thank you very much for your interest in this online science experiment!&lt;br/&gt;&lt;br/&gt;"/>
        <targetButton featureText="Start experiment" target="stimuliScreen"/>
    </presenter>
    <presenter displayOrder="9" menuLabel="stimuliN" next="EditUser" type="stimulus" self="stimuliScreen" title="stimuliScreen">
        <loadStimulus class="nl.mpi.tg.eg.frinex.adaptivevocabularyassessment.client.service.AdVocAsStimuliProvider"  repeatRandomWindow="0" eventTag="stimuliN" randomise="false" maxStimuli="1000" repeatCount="1">
            <hasMoreStimulus>
                <clearPage/>
                <centrePage/>
                <!--                <showStimulusProgress/>-->
                <stimulusLabel/>
                <addPadding/>
                <stimulusRatingButton eventTier="1" ratingLabelRight="" ratingLabelLeft="">
                    <nextStimulus repeatIncorrect="false"/>
                </stimulusRatingButton>
            </hasMoreStimulus>
            <endOfStimulus>
                <sendStimuliReport type="user_summary" />
                <sendStimuliReport type="fast_track" />
                <sendStimuliReport type="fine_tuning" />
                <showStimuliReport/>
                <targetButton featureText="Next" target="EditUser"/>
                <!--                <autoNextPresenter/>-->
            </endOfStimulus>
            <randomGrouping/>
            <stimuli/>
        </loadStimulus>
    </presenter>
    <presenter displayOrder="10" menuLabel="EditUser" next="End" type="metadata" self="EditUser" title="EditUser">
        <htmlText featureText="What do you think about this experiment?"/>
        <metadataField fieldName="feedBack"/>
        <saveMetadataButton featureText="Next" sendData="true" networkErrorMessage="Cannot connect to the server, please check your internet connection.">
            <onError/>
            <onSuccess>
                <autoNextPresenter/>
            </onSuccess>
        </saveMetadataButton>
    </presenter>
    <presenter displayOrder="11" menuLabel="End" type="transmission" self="End" title="End">
        <sendAllData>
            <onSuccess>
                <htmlText featureText="Gedaan! Heel erg bedankt voor het deelnemen!"/>-->
                <addPadding/>
                <generateCompletionCode/>
                <addPadding/>
                <eraseUsersDataButton featureText="Opnieuw beginnen"/>
            </onSuccess>
            <onError>
                <plainText featureText="Cannot connect to the server, please check your internet connection."/>
                <targetButton featureText="Retry" target="End"/>
            </onError>
        </sendAllData>
    </presenter>
    <presenter back="Edit_User" displayOrder="12" menuLabel="about" type="debug" self="about" title="about">
        <versionData/>
        <eraseLocalStorageButton/>
        <localStorageData/>
    </presenter>
    <stimuli>        
        <stimulus audioPath="" code="" identifier="example1" pauseMs="0" ratingLabels="stopped,continue">
            <tag>set1</tag>
            <tag>set2</tag>
            <tag>set3</tag>
        </stimulus>
    </stimuli>
</experiment>
