            <onSuccess>
                <autoNextPresenter/>
            </onSuccess>
        </saveMetadataButton>
    </presenter>
    <presenter back="Edit_User" displayOrder="2" menuLabel="Accord" next="stimuliScreenV1" type="metadata" self="Accord" title="">
        <htmlText featureText="Welkom bij dit experiment!&lt;br/&gt;&lt;br/&gt;
