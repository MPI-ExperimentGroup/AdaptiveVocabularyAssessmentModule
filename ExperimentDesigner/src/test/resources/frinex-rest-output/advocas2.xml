<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<experiment appNameDisplay="Adaptive Vocabulary Assessment 2" appNameInternal="advocas2" backgroundColour="#FFFFFF" complementColour0="#EAC3A3" complementColour1="#9D7B5E" complementColour2="#C69E7C" complementColour3="#FFEDDE" complementColour4="#FFFDFB" defaultScale="1.0" isScalable="true" preserveLastState="true" primaryColour0="#628D8D" primaryColour1="#385E5E" primaryColour2="#4A7777" primaryColour3="#96ADAD" primaryColour4="#D5D8D8" rotatable="true" showMenuBar="false" textFontSize="17">
    <preventWindowClose featureText="Bij reload worden ingetypte data verwiderd"/>
    <metadata>
        <field controlledMessage="Input at least 3 letters." controlledRegex=".'{'3,'}'" postName="workerId" preventServerDuplicates="false" registrationField="Wat is je naam?"/>
        <field controlledMessage="." controlledRegex=".*" postName="stimuli" preventServerDuplicates="false" registrationField="stimuli"/>
        <field controlledMessage="Input at least 3 letters." controlledRegex="['\\'S'\\'s]'{'3,'}'" postName="feedBack" preventServerDuplicates="false" registrationField=""/>
    </metadata>
    <presenter displayOrder="1" menuLabel="Menu" type="menu" self="Menu" title="Menu">
        <targetButton featureText="De data naar de server uploaden" target="DeelnemersLijst" />
        <addPadding/>
        <addPadding/>
        <targetButton featureText="Naar het experiment" target="Edit_User" />
    </presenter>
    <presenter displayOrder="2" menuLabel="Edit User" next="Accord" type="metadata" self="Edit_User" title="">
        <metadataField fieldName="workerId"/>
        <saveMetadataButton featureText="Volgende" sendData="false" networkErrorMessage="&amp;nbsp;">
            <onSuccess>   
                <autoNextPresenter/>
            </onSuccess>
            <onError>   
                <autoNextPresenter/>
            </onError>      
        </saveMetadataButton>
    </presenter>
    <presenter displayOrder="3" next="stimuliScreenV1" type="metadata" self="Accord" title="">
        <htmlText featureText="Welkom bij dit experiment!&lt;br/&gt;&lt;br/&gt;
In dit experiment krijg je een aantal woorden aangeboden. Sommige zijn bestaande Nederlandse woorden en sommige zijn nepwoorden.&lt;br/&gt;
Geef voor elk woord met een muisklik aan of jij het woord kent of niet.&lt;br/&gt;&lt;br/&gt;
Rechts: : JA, ik ken dit woord&lt;br/&gt;
Links: NEE, ik ken dit woord niet&lt;br/&gt;&lt;br/&gt;
Let op: zeg geen ja bij woorden die je niet kent, omdat ja-antwoorden voor nepwoorden streng bestraft worden.&lt;br/&gt;&lt;br/&gt;
Veel succes!"/>
        <targetButton featureText="Begin experiment" target="stimuliScreenV1"/>
    </presenter>
    <presenter displayOrder="4" next="End" type="stimulus" self="stimuliScreenV1" title="Series 1">
        <loadStimulus class="nl.mpi.tg.eg.frinex.adaptivevocabularyassessment.client.service.AdVocAsStimuliProvider" type="0" eventTag="stimuliN" 
                      numberOfSeries="2" numberOfBands="54" wordsPerBand="40" startBand="20" averageNonWordPosition="3" startPercentageGraph="30"
                      fineTuningTupleLength="4">
            <hasMoreStimulus>
                <clearPage/>
                <centrePage/>
                <!--                <showStimulusProgress/>-->
                <stimulusLabel styleName="groupMessageLabel"/>
                <addPadding/>
                <stimulusRatingButton eventTier="1" ratingLabelRight="" ratingLabelLeft="">
                    <nextStimulus repeatIncorrect="false"/>
                </stimulusRatingButton>
            </hasMoreStimulus>
            <endOfStimulus>
                <sendStimuliReport type="user_summary" separator=";" headerKey="row000000"/>
                <sendStimuliReport type="fast_track" separator=";" headerKey="row000000"/>
                <sendStimuliReport type="fine_tuning" separator=";" headerKey="row000000"/>
                <showStimuliReport/>
                <targetButton featureText="Heel goed gedaan. Nu komt de tweede ronde van deze taak. Veel succes!" target="enterSecondRound"/>
            </endOfStimulus>
            <randomGrouping/>
            <stimuli>
                <tag>set1</tag>
            </stimuli>
        </loadStimulus>
    </presenter>
    <presenter displayOrder="5" next="stimuliScreenV2" type="metadata" self="enterSecondRound" title="">
        <metadataField fieldName="workerId"/>
        <saveMetadataButton featureText="Volgende" sendData="true" networkErrorMessage="Cannot connect to the server, please check your internet connection.">
            <onSuccess>   
                <autoNextPresenter/>
            </onSuccess>
            <onError>   
                <autoNextPresenter/>
            </onError>
        </saveMetadataButton>
    </presenter>
    <presenter displayOrder="6" next="End" type="stimulus" self="stimuliScreenV2" title="Series 2">
        <loadStimulus class="nl.mpi.tg.eg.frinex.adaptivevocabularyassessment.client.service.AdVocAsStimuliProvider" type="1" eventTag="stimuliN"
                      numberOfSeries="2" numberOfBands="54" wordsPerBand="40" startBand="20" averageNonWordPosition="3" startPercentageGraph="30"
                      fineTuningTupleLength="4">
            <hasMoreStimulus>
                <clearPage/>
                <centrePage/>
                <stimulusLabel styleName="groupMessageLabel"/>
                <addPadding/>
                <stimulusRatingButton eventTier="1" ratingLabelRight="" ratingLabelLeft="">
                    <nextStimulus repeatIncorrect="false"/>
                </stimulusRatingButton>
            </hasMoreStimulus>
            <endOfStimulus>
                <sendStimuliReport type="user_summary" separator=";" headerKey="row000000"/>
                <sendStimuliReport type="fast_track" separator=";" headerKey="row000000"/>
                <sendStimuliReport type="fine_tuning" separator=";" headerKey="row000000"/>
                <showStimuliReport/>
                <targetButton featureText="Dit is het einde van deze taak. Dankjewel voor je deelname!" target="End"/>
            </endOfStimulus>
            <randomGrouping/>
            <stimuli>
                <tag>set2</tag>
            </stimuli>
        </loadStimulus>
    </presenter>
    <presenter displayOrder="7" type="transmission" self="End" title="End">
        <saveMetadataButton featureText="Volgende" sendData="true" networkErrorMessage="Cannot connect to the server, please check your internet connection and/or upload data later.
                Do not clean the browser's cache.">
          <onSuccess>  
                <sendAllData>
                    <onSuccess>
                        <htmlText featureText="Einde van de taak. Dankjewel voor je deelname!"/>
                        <addPadding/>
                        <addPadding/>
                        <createUserButton featureText="Opnieuw beginnen" target="Edit_User"/>
                        <addPadding/>
                        <addPadding/>
                        <targetButton featureText="De data naar de server uploaden" target="DeelnemersLijst" />
                    </onSuccess>
                    <onError>
                        <plainText featureText="Cannot connect to the server, please check your internet connection and/or upload data later and do not clean the browser's cache."/>
                        <targetButton featureText="Retry" target="End"/>
                    </onError>
                </sendAllData> 
            </onSuccess>
            <onError>   
                <plainText featureText="Cannot connect to the server, please check your internet connection and/or upload data later and do not clean the browser's cache."/>
                <targetButton featureText="Retry" target="End"/>
            </onError>      
        </saveMetadataButton>
    </presenter>
    <presenter back="Menu" displayOrder="8" menuLabel="Data Upload" next="UploadParticipantData" type="metadata" self="DeelnemersLijst" title="Kiez deelnemer">
        <selectUserMenu/>
        <addPadding/>
        <addPadding/>
        <targetButton featureText="Naar het begin" target="Menu"/>
    </presenter>
    <presenter back="Menu" displayOrder="9" type="transmission" self="UploadParticipantData" title="Upload gekozen deelnemer data">
        <sendAllData>
            <onSuccess>                
                <eraseUsersDataButton featureText="Data geupload. Upload volgende deelnemers" target="DeelnemersLijst"/>
            </onSuccess>
            <onError>
                <plainText featureText="Could not contact the server, please check your internet connection and try again."/>
                <targetButton featureText="Retry" target="UploadParticipantData"/>
            </onError>
        </sendAllData>        
    </presenter>
    <presenter back="Menu" displayOrder="20" menuLabel="about" type="debug" self="about" title="about">
        <versionData/>
        <eraseLocalStorageButton/>
        <localStorageData/>
    </presenter>
    <stimuli>        
        <stimulus audioPath="" code="" identifier="example1" pauseMs="0" ratingLabels="stopped,continue">
            <tag>set1</tag>
            <tag>set2</tag>
            <tag>set3</tag>
        </stimulus>
    </stimuli>
</experiment>
