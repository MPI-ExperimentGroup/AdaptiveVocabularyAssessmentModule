<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<experiment appNameDisplay="ld-screensize" appNameInternal="ld_screensize" backgroundColour="#FFFFFF" complementColour0="#EAC3A3" complementColour1="#9D7B5E" complementColour2="#C69E7C" complementColour3="#FFEDDE" complementColour4="#FFFDFB" defaultScale="1.0" isScalable="true" primaryColour0="#628D8D" primaryColour1="#385E5E" primaryColour2="#4A7777" primaryColour3="#96ADAD" primaryColour4="#D5D8D8" showMenuBar="false" textFontSize="17">
    <metadata>
        <field controlledMessage="Voer minimaal drie letters." controlledRegex=".'{'3,'}'" postName="workerId" preventServerDuplicates="false" registrationField="Proefpersoon ID"/>
        <field controlledMessage="Voer een getal." controlledRegex="[0-3][0-9]/[0-1][0-9]/[1-2][0-9][0-9][0-9]" postName="datOfBirth" preventServerDuplicates="false" registrationField="Geboortedatum"/>
        <field controlledMessage="." controlledRegex="|man|vrouw|anders" postName="gender" preventServerDuplicates="false" registrationField="Geslacht"/>
        <field controlledMessage="." controlledRegex=".*" postName="groupAllocation_trainingScreen" preventServerDuplicates="false" registrationField="groupAllocation_trainingScreen"/>
        <field controlledMessage="." controlledRegex=".*" postName="groupAllocation_testScreen" preventServerDuplicates="false" registrationField="groupAllocation_testScreen"/>
    </metadata>
    <presenter displayOrder="1" menuLabel="Start" type="metadata" self="Start" title="Start">
        <existingUserCheck>
            <multipleUsers>
                <plainText featureText="Begin a new interview with a new participant"/>
                <createUserButton featureText="New interview" target="Edit_User"/>
                <addPadding/>
                <plainText featureText="Resume an interview with an existing participant"/>
                <targetButton featureText="Resume interview" target="SelectUser"/>
            </multipleUsers>
            <singleUser>
                <autoNextPresenter target="Edit_User"/>
            </singleUser>
        </existingUserCheck>
    </presenter>
    <presenter back="Start" displayOrder="2" menuLabel="Select Participant" next="Edit_User" type="metadata" self="SelectUser" title="Select Participant">
        <selectUserMenu/>
    </presenter>
    <presenter displayOrder="3" menuLabel="Menu" type="menu" self="Menu" title="Menu">
        <allMenuItems/>
    </presenter>
    <presenter back="SelectUser" displayOrder="4" menuLabel="Terug" next="introduction_1" type="metadata" self="Edit_User" title="Gegevens">
        <htmlText featureText="When the bluetooth controller is connected the virtual keyboard will not show, to enter participant metadata please turn off the bluetooth controller so that the virtual keyboard can be shown. To start the bluetooth controller turn it on and press the button combination M+A."/>
        <metadataField fieldName="workerId"/>
        <metadataField fieldName="datOfBirth"/>
        <metadataField fieldName="gender"/>
        <saveMetadataButton featureText="Volgende" sendData="false" networkErrorMessage="Geen verbinding met de server. Controleer alstublieft uw internetverbinding en probeer het opnieuw.">
            <onError/>
            <onSuccess>
                <autoNextPresenter/>
            </onSuccess>
        </saveMetadataButton>
    </presenter>
    <presenter back="Menu" displayOrder="5" menuLabel="introduction 1" next="introduction_2" type="stimulus" self="introduction_1" title="introduction 1">
        <backgroundImage msToNext="1000" src="huisje_02.jpg" styleName=""/>
        <htmlText featureText="Intro text"/>
        <audioButton eventTag="intro_1" src="intro_1" hotKey="F6" autoPlay="false" poster="intro_1.jpg">
            <actionButton featureText="continue button" hotKey="ENTER">
                <autoNextPresenter/>
            </actionButton>
        </audioButton>
    </presenter>
    <presenter back="Menu" displayOrder="6" menuLabel="introduction 2" next="introduction_3" type="stimulus" self="introduction_2" title="introduction 2">
        <backgroundImage msToNext="1000" src="huisje_02.jpg" styleName=""/>
        <htmlText featureText="Intro text"/>
        <audioButton eventTag="intro_2" src="intro_2" hotKey="F6" autoPlay="true" poster="intro_2.jpg">
            <actionButton featureText="continue button" hotKey="ENTER">
                <autoNextPresenter/>
            </actionButton>
        </audioButton>
    </presenter>
    <presenter back="Menu" displayOrder="7" menuLabel="introduction 3" next="trainingScreen" type="stimulus" self="introduction_3" title="introduction 3">
        <backgroundImage msToNext="1000" src="huisje_02.jpg" styleName=""/>
        <htmlText featureText="Intro text"/>
        <audioButton eventTag="intro_3" src="intro_3" hotKey="F6" autoPlay="true" poster="intro_3.jpg">
            <actionButton featureText="continue button" hotKey="ENTER">
                <autoNextPresenter/>
            </actionButton>
        </audioButton>
    </presenter>
    <presenter back="Menu" displayOrder="8" menuLabel="trainingScreen" next="testScreen" type="stimulus" self="trainingScreen" title="trainingScreen">
        <backgroundImage msToNext="7000" src="huisje_02.jpg" styleName="zoomToBlock1">
            <loadStimulus eventTag="trainingScreen" randomise="true" repeatRandomWindow="0" maxStimuli="1000" repeatCount="1">
                <hasMoreStimulus>
                    <backgroundImage msToNext="0" src="" styleName=""/>
                    <clearPage styleName="fullScreenWidth"/>
                    <stimulusCodeAudio msToNext="1000" codeFormat="&lt;code&gt;_1" showPlaybackIndicator="true">
                        <stimulusCodeAudio msToNext="0" codeFormat="&lt;code&gt;_2" showPlaybackIndicator="true"/>
                        <table>
                            <row>
                                <column>
                                    <stimulusCodeVideo msToNext="0" maxHeight="100" codeFormat="&lt;code&gt;_L" percentOfPage="0" styleName="" showControls="false" maxWidth="100"/>
                                </column>
                                <column>
                                    <stimulusCodeVideo msToNext="0" maxHeight="100" codeFormat="&lt;code&gt;_R" percentOfPage="0" styleName="" showControls="false" maxWidth="100">
                                        <stimulusCodeAudio msToNext="0" codeFormat="&lt;code&gt;_3" showPlaybackIndicator="true">
                                            <actionButton featureText="Repeat" eventTag="Repeat" hotKey="F6">
                                                <showStimulus/>
                                            </actionButton>
                                            <nextStimulusButton featureText="Next" eventTag="nextStimulusR" hotKey="ENTER" repeatIncorrect="false"/>
                                        </stimulusCodeAudio>
                                    </stimulusCodeVideo>
                                </column>
                            </row>
                        </table>
                    </stimulusCodeAudio>
                    <touchInputZone eventTag="leftHalfScreen" hotKey="Z" styleName="leftHalfScreen"/>
                    <touchInputZone eventTag="rightHalfScreen" hotKey="M" styleName="rightHalfScreen"/>
                </hasMoreStimulus>
                <endOfStimulus>
                    <autoNextPresenter/>
                </endOfStimulus>
                <randomGrouping storageField="groupAllocation_trainingScreen">
                    <tag>trainingScreen</tag>
                </randomGrouping>
                <stimuli>
                    <tag>trainingScreen</tag>
                </stimuli>
            </loadStimulus>
        </backgroundImage>
    </presenter>
    <presenter back="Menu" displayOrder="9" menuLabel="testScreen" next="completion" type="stimulus" self="testScreen" title="testScreen">
        <backgroundImage msToNext="7000" src="huisje_02.jpg" styleName="zoomToBlock2">
            <loadStimulus eventTag="testScreen" randomise="true" repeatRandomWindow="0" maxStimuli="1000" repeatCount="1">
                <hasMoreStimulus>
                    <backgroundImage msToNext="0" src="" styleName=""/>
                    <clearPage styleName="fullScreenWidth"/>
                    <stimulusCodeAudio msToNext="1000" codeFormat="&lt;code&gt;_1" showPlaybackIndicator="true">
                        <stimulusCodeAudio msToNext="0" codeFormat="&lt;code&gt;_2" showPlaybackIndicator="true"/>
                        <table>
                            <row>
                                <column>
                                    <stimulusCodeVideo msToNext="0" maxHeight="100" codeFormat="&lt;code&gt;_L" percentOfPage="0" styleName="" showControls="false" maxWidth="100"/>
                                </column>
                                <column>
                                    <stimulusCodeVideo msToNext="0" maxHeight="100" codeFormat="&lt;code&gt;_R" percentOfPage="0" styleName="" showControls="false" maxWidth="100">
                                        <stimulusCodeAudio msToNext="0" codeFormat="&lt;code&gt;_3" showPlaybackIndicator="true">
                                            <actionButton featureText="Repeat" eventTag="Repeat" hotKey="F6">
                                                <showStimulus/>
                                            </actionButton>
                                            <nextStimulusButton featureText="Next" eventTag="nextStimulusR" hotKey="ENTER" repeatIncorrect="false"/>
                                        </stimulusCodeAudio>
                                    </stimulusCodeVideo>
                                </column>
                            </row>
                        </table>
                    </stimulusCodeAudio>
                    <touchInputZone eventTag="leftHalfScreen" hotKey="Z" styleName="leftHalfScreen"/>
                    <touchInputZone eventTag="rightHalfScreen" hotKey="M" styleName="rightHalfScreen"/>
                </hasMoreStimulus>
                <endOfStimulus>
                    <autoNextPresenter/>
                </endOfStimulus>
                <randomGrouping storageField="groupAllocation_testScreen">
                    <tag>testScreen</tag>
                </randomGrouping>
                <stimuli>
                    <tag>testScreen</tag>
                </stimuli>
            </loadStimulus>
        </backgroundImage>
    </presenter>
    <presenter back="Menu" displayOrder="10" menuLabel="Einde van het experiment" type="transmission" self="completion" title="Einde van het experiment">
        <sendAllData>
            <onSuccess>
                <htmlText featureText="Dit is het einde van het experiment.&lt;br/&gt;Hartelijk dank voor uw deelname! &lt;br/&gt;&lt;br/&gt;"/>
                <addPadding/>
                <generateCompletionCode/>
                <addPadding/>
                <htmlText featureText="&lt;br/&gt;Het bovenstaande nummer is het bewijs dat u het experiment heeft voltooid, en is vereist voor het in orde maken van uw vergoeding."/>
                <addPadding/>
                <eraseUsersDataButton featureText="Opnieuw beginnen"/>
            </onSuccess>
            <onError>
                <plainText featureText="Geen verbinding met de server. Controleer alstublieft uw internetverbinding en probeer het opnieuw."/>
                <targetButton featureText="Probeer opnieuw" target="completion"/>
            </onError>
        </sendAllData>
    </presenter>
    <presenter back="Menu" displayOrder="11" menuLabel="Over" type="debug" self="about" title="Over">
        <versionData/>
    </presenter>
    <stimuli>
        <stimulus audioPath="training_1" code="training_1" identifier="training_1" imagePath="training_1" pauseMs="0">
            <tag>trainingScreen</tag>
        </stimulus>
        <stimulus audioPath="training_2" code="training_2" identifier="training_2" imagePath="training_2" pauseMs="0">
            <tag>trainingScreen</tag>
